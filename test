import javax.swing.*;
import java.awt.*;

public class CasinoMainScreen extends JFrame {
    private JLabel titleLabel;
    private JButton playButton;
    private JButton exitButton;

    public CasinoMainScreen() {
        setTitle("Casino Spiel");
        setSize(400, 300);
        setDefaultCloseOperation(EXIT_ON_CLOSE);
        setLocationRelativeTo(null);

        titleLabel = new JLabel("Willkommen im Casino!");
        titleLabel.setFont(new Font("Arial", Font.BOLD, 20));
        titleLabel.setHorizontalAlignment(SwingConstants.CENTER);
        add(titleLabel, BorderLayout.NORTH);

        JPanel buttonPanel = new JPanel();
        playButton = new JButton("Spielen");
        exitButton = new JButton("Beenden");
        buttonPanel.add(playButton);
        buttonPanel.add(exitButton);
        add(buttonPanel, BorderLayout.CENTER);

        playButton.addActionListener(e -> {
            // Hier kann die Logik für das Spiel gestartet werden
            JOptionPane.showMessageDialog(this, "Spiel wird gestartet!");
        });

        exitButton.addActionListener(e -> {
            // Hier kann die Logik für das Beenden des Spiels implementiert werden
            System.exit(0);
        });
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(() -> {
            CasinoMainScreen mainScreen = new CasinoMainScreen();
            mainScreen.setVisible(true);
        });
    }
}