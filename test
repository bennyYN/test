import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class SlotGame extends JFrame {
    private final int WIDTH = 600;
    private final int HEIGHT = 400;
    private JButton spinButton;
    private JButton manualSpinButton; // Neuer Button f√ºr manuellen Spin
    private JLabel[] reels;
    private ImageIcon[] symbols;

    public SlotGame() {
        setTitle("Slot Game");
        setSize(WIDTH, HEIGHT);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setResizable(false);

        // Load symbols
        symbols = new ImageIcon[]{
                new ImageIcon("path_to_symbol1_image.jpg"),
                new ImageIcon("path_to_symbol2_image.jpg"),
                new ImageIcon("path_to_symbol3_image.jpg")
        };

        // Set background
        getContentPane().setBackground(Color.BLACK);

        // Initialize reels
        reels = new JLabel[3];
        for (int i = 0; i < reels.length; i++) {
            reels[i] = new JLabel();
            reels[i].setIcon(symbols[0]); // Initial symbol
            add(reels[i]);
        }

        // Spin button
        spinButton = new JButton("Spin");
        spinButton.addActionListener(new SpinListener());
        add(spinButton, BorderLayout.SOUTH);

        // Manual spin button
        manualSpinButton = new JButton("Manual Spin");
        manualSpinButton.addActionListener(new SpinListener()); // Verwendet denselben Listener wie Spin Button
        add(manualSpinButton, BorderLayout.NORTH);

        // Layout reels horizontally
        GroupLayout layout = new GroupLayout(getContentPane());
        getContentPane().setLayout(layout);
        layout.setAutoCreateGaps(true);
        layout.setAutoCreateContainerGaps(true);

        layout.setHorizontalGroup(
                layout.createSequentialGroup()
                        .addComponent(reels[0])
                        .addComponent(reels[1])
                        .addComponent(reels[2])
        );

        layout.setVerticalGroup(
                layout.createParallelGroup(GroupLayout.Alignment.BASELINE)
                        .addComponent(reels[0])
                        .addComponent(reels[1])
                        .addComponent(reels[2])
        );

        pack();
        setVisible(true);
    }

    private class SpinListener implements ActionListener {
        @Override
        public void actionPerformed(ActionEvent e) {
            // Simulate spinning
            for (JLabel reel : reels) {
                int randomSymbol = (int) (Math.random() * symbols.length);
                reel.setIcon(symbols[randomSymbol]);
            }
        }
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(SlotGame::new);
    }
}