import javax.sound.sampled.*;
import java.io.File;
import java.io.IOException;

public class SoundPlayer {
    private Clip audioClip;

    public SoundPlayer(String soundFileName) {
        try {
            // Pfad zur WAV-Datei
            File soundFile = new File(soundFileName);

            // AudioInputStream erstellen
            AudioInputStream audioStream = AudioSystem.getAudioInputStream(soundFile);

            // Audioformat und Datenline abrufen
            AudioFormat format = audioStream.getFormat();
            DataLine.Info info = new DataLine.Info(Clip.class, format);

            // Clip erstellen und Ã¶ffnen
            audioClip = (Clip) AudioSystem.getLine(info);
            audioClip.open(audioStream);

        } catch (UnsupportedAudioFileException | IOException | LineUnavailableException e) {
            e.printStackTrace();
        }
    }

    public void play() {
        if (audioClip != null) {
            // Sound abspielen
            audioClip.start();

            // Warten bis der Sound endet
            try {
                while (!audioClip.isRunning()) {
                    Thread.sleep(10);
                }
                while (audioClip.isRunning()) {
                    Thread.sleep(10);
                }
            } catch (InterruptedException e) {
                e.printStackTrace();
            }

            // Ressourcen freigeben
            audioClip.close();
        }
    }

    public static void main(String[] args) {
        // Erstelle ein SoundPlayer-Objekt und spiele den Sound ab
        SoundPlayer player = new SoundPlayer("your_sound_file.wav");
        player.play();
    }
}